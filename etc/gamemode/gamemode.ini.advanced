# ----------------------------------------------------------------------
#  Custom pre‑launch / post‑exit commands
# ----------------------------------------------------------------------
[custom]
# Commands run **before** the game starts.
prelaunch = [ "nvidia-smi -i 0,1 -pm 1", "nvidia-smi -i 0,1 -pl 250", "nvidia-smi -i 0,1 -ac 7000,2100", "sysctl -w kernel.sched_boost=0" ]

# Commands run **after** the game exits.
postexit = [ "nvidia-smi -i 0,1 -pm 0", "sysctl -w kernel.sched_boost=1" ]

# Optional – you can also flush the page‑cache to free RAM for other apps:
# postexit = "sync; echo 3 > /proc/sys/vm/drop_caches"


